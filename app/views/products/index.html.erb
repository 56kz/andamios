<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1 class="text-center">Productos</h1><br><br>

      <table class="table">
        <tr>
          <th>Id</th>
          <th>Nombre</th>
          <th>Cantidad</th>
        </tr>
        <% @products.each do |p| %>
          <tr>
            <td><%= p.id %></td>
            <td><%= p.name %></td>
            <td><%= p.quantity %></td>
          </tr>
        <% end %>
      </table>

    </div>
  </div>
</div>
