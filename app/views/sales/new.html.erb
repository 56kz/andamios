<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <h1>Nueva Venta</h1>
      <%= form_for @sale do |f| %>
        <div class="form-group">
          <%= f.text_field :date, class: "form-control input-lg", placeholder: "Ingresa la fecha de la compra" %>
        </div>
        <div class="form-group">
          <%= f.text_field :quantity, class: "form-control input-lg", placeholder: "Ingresa la cantidad" %>
        </div>


        <div class="form-group">
          <div class="field form-group">
            <%= collection_select(:sale, :product_id, Product.all, :id, :name, prompt: true)%>
          </div>
        </div>

        <div class="form-group">
          <div class="field form-group">
            <%= collection_select(:sale, :customer_id, Customer.all, :id, :name, prompt: true)%>
          </div>
        </div>





        <div>
          <%= f.submit "Crear Venta", class: "btn btn-primary btn-lg btn-block" %>
        </div>
      <% end %>

    </div>
  </div>
</div>
