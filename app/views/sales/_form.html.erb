<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <h1><%= form_title %></h1>
      <%= form_for @sale do |f| %>
        <div class="form-group">
          <%= f.text_field :date, class: "form-control input-lg", placeholder: "Ingresa la fecha de la venta" %>
        </div>
        <div class="form-group">
          <%= f.text_field :quantity, class: "form-control input-lg", placeholder: "Ingresa la cantidad" %>
        </div>
        <div>
          <%= f.submit form_title, class: "btn btn-primary btn-lg btn-block" %>
        </div>
      <% end %>

    </div>
  </div>
</div>
